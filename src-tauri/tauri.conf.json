{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Plex MPV Client",
  "version": "0.1.0",
  "identifier": "com.example.plexmpv",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Plex MPV Client",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "externalBin": [
      "bin/mpv",
      "bin/ffmpeg",
      "bin/ffprobe"
    ]
  }
}
